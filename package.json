{
  "name": "mobile-web-api-test-automation-framework",
  "version": "1.0.0",
  "description": "Comprehensive test automation framework for API, Web, and Mobile testing with TypeScript, Playwright, WebdriverIO, Appium, and Allure reporting",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "test:api": "playwright test tests/api --project=api",
    "test:web": "playwright test tests/web --project=chromium-desktop --project=chromium-mobile --project=chromium-tablet --project=firefox-desktop --project=firefox-mobile --project=firefox-tablet --project=webkit-desktop --project=webkit-mobile --project=webkit-tablet",
    "test:mobile": "wdio run wdio.mobile.conf.ts",
    "allure:clean": "rm -rf allure-results allure-report",
    "allure:generate": "allure generate allure-results --clean -o allure-report",
    "allure:report": "allure generate allure-results --clean -o allure-report && allure open allure-report",
    "lint": "eslint . --fix",
    "lint:check": "eslint .",
    "format": "prettier --write \"**/*.{js,ts,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,ts,json,md}\"",
    "prepare": "husky"
  },
  "keywords": [
    "playwright",
    "automation",
    "testing",
    "allure",
    "e2e",
    "ui-testing",
    "api-testing",
    "mobile-testing",
    "webdriverio",
    "appium"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@faker-js/faker": "^9.0.3",
    "@playwright/test": "^1.48.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "^20.14.0",
    "@typescript-eslint/eslint-plugin": "^7.13.0",
    "@typescript-eslint/parser": "^7.13.0",
    "@wdio/allure-reporter": "^8.16.12",
    "@wdio/appium-service": "^8.16.12",
    "@wdio/browserstack-service": "^9.20.0",
    "@wdio/cli": "^8.16.12",
    "@wdio/globals": "^8.16.12",
    "@wdio/local-runner": "^8.16.12",
    "@wdio/mocha-framework": "^8.16.12",
    "@wdio/spec-reporter": "^8.16.12",
    "@wdio/types": "^8.16.12",
    "allure-commandline": "^2.32.0",
    "allure-playwright": "^3.0.3",
    "appium": "^3.0.0",
    "appium-uiautomator2-driver": "^3.7.0",
    "appium-xcuitest-driver": "^10.17.1",
    "dotenv": "^16.4.5",
    "eslint": "^8.57.1",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^18.0.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-playwright": "^1.8.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "mocha": "^11.1.0",
    "prettier": "^3.3.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.0",
    "webdriverio": "^8.16.12"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "http-status-codes": "^2.3.0",
    "zod": "^4.3.5"
  }
}
